<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.worldcuptracking">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="com.google.android.gms.permission.AD_ID"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name="com.worldcuptracking.WorldCupApp"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/SplashTheme"
    >
        <activity
            android:name="com.worldcuptracking.activity.MainActivity"
            android:label="@string/app_name"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.worldcuptracking.activity.NewsActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name="com.worldcuptracking.activity.MatchDetailActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name="com.worldcuptracking.activity.NewsFeedActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name="com.worldcuptracking.activity.StadiumListActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name="com.worldcuptracking.activity.StadiumDetailsActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name="com.worldcuptracking.activity.GroupActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name="com.worldcuptracking.activity.MatchActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name="com.worldcuptracking.activity.AnalysisActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.worldcuptracking.activity.TeamActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.worldcuptracking.activity.TeamProfileActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.worldcuptracking.activity.AboutActivity"
            android:theme="@style/AppTheme" />


        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id" />


    </application>
</manifest>